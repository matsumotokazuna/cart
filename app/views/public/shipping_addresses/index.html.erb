<h2>配送先登録</h2>
<%= form_for(@shipping_address, url:shipping_addresses_path) do |f| %>
    <div>
        <h4>郵便番号</h4>
        <%= f.text_field :postcode %>
    </div>
    <div>
        <h4>住所</h4>
        <%= f.text_field :address %>
    </div>
    <div>
        <h4>宛先</h4>
        <%= f.text_field :name %>
    </div>
    <%= f.submit '配送先登録' %>
<% end %>

<h2>配送先一覧</h2>
<table>
    <tr>
        <th>会員id</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛先</th>
    </tr>
    <% @shipping_addresses.each do |shipping_address| %>
        <% if shipping_address.customer_id == current_customer.id %>
    <tr>
        <td><%= shipping_address.customer_id %></td>
        <td><%= shipping_address.postcode %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
    </tr>
        <% end %>
    <% end %>
