<h2>ショッピングカート</h2>
<table>
    <tr>
        <th>商品名</th>
        <th>単価（税抜）</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
    <% @cart_items.each do |cart_item| %>
        <% if cart_item.customer_id == current_customer.id %>
    <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <td>
            <% price_including_tax = cart_item.item.price * 1.1 %>
            <%= price_including_tax.floor %>
        </td>
        <td>
            <%= form_for(cart_item, url:cart_item_path(cart_item.id)) do |f| %>
                <%= f.text_field :quantity %>
                <%= f.submit '変更' %>
            <% end %>
        </td>
        <td>
            <% subtotal_price = price_including_tax * cart_item.quantity%>
            <%= subtotal_price.floor %>
        </td>
        <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
        <% end %>
    <% end %>
</table>

